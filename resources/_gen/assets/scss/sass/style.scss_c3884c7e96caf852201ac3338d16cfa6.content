html{font-size:10px}body{background:#161821;color:#c6c8d1}.wrapper{display:flex;flex-direction:column;min-height:100vh;font-size:2.5vw}.wrapper main{flex:1;margin:2em auto;padding:0 1em;z-index:10;width:100%;max-width:1280px;background:#161821}.wrapper .not-found{flex:1;margin:auto}.wrapper .not-found span{position:absolute;top:50%;left:50%;transform:translate(-50%, -50%);z-index:10;padding:6px;border-radius:10px;background:#e27878;color:#161821;font-size:2em;font-weight:bold}a{color:#84a0c6}a:hover{color:#84a0c6;text-decoration:none}header h1{margin:0;padding:0 12px;border-bottom-left-radius:48px;border-bottom-right-radius:48px;line-height:1.6;background:#e2a478;font-size:2em}header h1 a,header h1 a:hover{display:inline-block;padding:0 6px;color:#161821}footer{border-top-left-radius:48px;border-top-right-radius:48px;background:#a093c7}footer .accounts{display:flex;flex-direction:row;justify-content:center;margin-left:0 auto}footer .accounts a{display:inline-block;width:1.4em;margin:8px;text-align:center;border-radius:10px;background:#b4be82;color:#161821;font-size:1em;font-weight:bold}footer .copyright{display:block;text-align:center;margin:0 auto;color:#161821;font-size:12px;font-weight:bold}ul.pagination{display:flex;justify-content:center;margin:24px auto;padding-inline-start:0;list-style-type:none}ul.pagination li{height:3.2rem;width:3.2rem;margin-right:4px;text-align:center;background:#89b8c2}ul.pagination li:first-child{width:4.8rem;background:#e27878;border-left:solid 8px #e27878;border-top-left-radius:14px;border-bottom-left-radius:14px}ul.pagination li:last-child{width:4.8rem;background:#e27878;border-right:solid 8px #e27878;border-top-right-radius:14px;border-bottom-right-radius:14px}ul.pagination *{margin:0 auto;color:#161821;font-size:2rem}.articles{display:flex;flex-wrap:wrap;flex:1;justify-content:center;align-content:center;margin:12px auto}.articles article{position:relative;max-width:80%;margin:0 auto 2em;color:#c6c8d1}.articles article .entry-summary{position:relative;overflow:hidden;margin-top:12px;padding:0 12px;max-width:40em;background:#161821}.articles article:hover .entry-summary{color:#84a0c6}.single-entry{margin:0 24px}.single-entry .entry-content{margin:12px 0;padding:24px 3em;border-radius:10px}.single-entry .entry-content img{display:block;max-width:90%;margin:12px auto}.single-entry .entry-content pre{display:block;width:90%;margin:12px auto;padding:8px;border:solid 2px #c6c8d1;font-size:1.4rem}.entry-header{position:sticky;position:-webkit-sticky;top:0;z-index:10;padding:1em 0;text-align:left;background:#161821}.entry-header .inner-box{display:inline-block;padding:0 1em;border-left:solid 2em #b4be82;border-top-left-radius:2em;border-bottom-left-radius:2em;background:#161821}.entry-header .entry-title{margin-bottom:0;color:#89b8c2;font-size:1.3em}.entry-header .publish-date{display:block;text-transform:uppercase;color:#a093c7;font-size:0.6em}@media screen and (min-width: 960px){.wrapper{font-size:2.4rem}}@media screen and (max-width: 640px){.wrapper{font-size:1.6rem}header h1,.wrapper .not-found span{font-size:2.4rem}ul.pagination li{height:2rem;width:2rem}ul.pagination li:first-child{width:2.6rem;background:#e27878;border-left:solid 8px #e27878;border-top-left-radius:14px;border-bottom-left-radius:14px}ul.pagination li:last-child{width:2.6rem;background:#e27878;border-right:solid 8px #e27878;border-top-right-radius:14px;border-bottom-right-radius:14px}ul.pagination *{font-size:1.2rem}.single-entry .entry-content{padding:0 8px;border:none}}

