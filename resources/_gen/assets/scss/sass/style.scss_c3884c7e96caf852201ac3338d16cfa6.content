html{font-size:10px}body{background:#161821;color:#c6c8d1}.wrapper{display:flex;flex-direction:column;min-height:100vh;max-width:1080px;margin:0 auto;font-size:1.6rem}.wrapper main{flex:1;margin:auto 24px;padding-top:24px}.wrapper .not-found{flex:1;margin:auto}.wrapper .not-found span{position:absolute;top:50%;left:50%;transform:translate(-50%, -50%);z-index:10;padding:6px;border-radius:10px;background:#e27878;color:#161821;font-size:3.6rem;font-weight:bold}a{color:#84a0c6}a:hover{color:#84a0c6;text-decoration:none}header{margin:0 24px;padding-top:24px;text-align:left;background:#161821}header h1{margin:0;padding:0 12px 0 12px;border-left:solid 12px #e2a478;border-right:solid 12px #e2a478;border-radius:10px;line-height:1.3;background:#e2a478;font-size:3.75vw}header h1 a,header h1 a:hover{display:inline-block;padding:0 6px;border-left:solid 4px #161821;border-right:solid 4px #161821;background:#e27878;color:#161821}footer{display:flex;flex-direction:column;justify-content:center;margin:auto 24px;padding-bottom:24px;background:#161821;text-align:center}footer .links{margin:0 auto;padding:0 4px;border-left:solid 48px #b4be82;border-right:solid 48px #b4be82;border-radius:20px}footer .links a{display:inline-block;width:4rem;height:4.2rem;margin:0;background:#a093c7;color:#161821;font-size:3.2rem;font-weight:bold}footer .copyright{display:block;margin-top:8px;text-align:center;color:#89b8c2;font-weight:bold}ul.pagination{display:flex;justify-content:center;margin:24px auto;padding-inline-start:0;list-style-type:none}ul.pagination li{height:3.2rem;width:3.2rem;margin-right:4px;text-align:center;background:#89b8c2}ul.pagination li:first-child{width:4.8rem;background:#e27878;border-left:solid 8px #e27878;border-top-left-radius:14px;border-bottom-left-radius:14px}ul.pagination li:last-child{width:4.8rem;background:#e27878;border-right:solid 8px #e27878;border-top-right-radius:14px;border-bottom-right-radius:14px}ul.pagination *{margin:0 auto;color:#161821;font-size:2rem}.articles{display:flex;flex-wrap:wrap;justify-content:center;margin:12px 24px}.articles article{position:relative;width:300px;margin:12px;color:#c6c8d1}.articles article .entry-title{padding:0 4px;font-size:2rem}.articles article .entry-summary{position:relative;z-index:100;margin-top:12px;padding:0 12px;border-left:solid 24px #b4be82;border-right:solid 24px #b4be82;border-radius:10px;background:#161821}.articles article:hover .entry-summary{z-index:1;border-color:#e27878}.articles article .read-more{position:absolute;top:50%;left:50%;transform:translate(-50%, -50%);z-index:10;padding:6px;border-radius:10px;background:#e27878;color:#161821;font-size:1.6rem;font-weight:bold}.single-entry{margin:0 24px}.single-entry .entry-content{margin:12px 0;padding:0 24px;border-left:solid 24px #b4be82;border-right:solid 24px #b4be82;border-radius:10px}.single-entry .entry-content img{display:block;max-width:80%;margin:12px auto}.single-entry .entry-content pre{display:block;width:85%;margin:12px auto;padding:8px;border:solid 2px #c6c8d1}.entry-header{text-align:center;border-left:solid 24px #e2a478;border-right:solid 24px #e2a478;border-radius:10px}.entry-header .entry-title{margin-bottom:0;border-left:solid 4px #161821;border-right:solid 4px #161821;background:#84a0c6;color:#161821}.entry-header .publish-date{display:block;border-left:solid 4px #161821;border-right:solid 4px #161821;background:#84a0c6;color:#161821;font-size:1.4rem;font-weight:bold}@media screen and (min-width: 960px){header h1{font-size:3.6rem}}@media screen and (max-width: 640px){header h1,.wrapper .not-found span{font-size:2.4rem}ul.pagination li{height:2rem;width:2rem}ul.pagination li:first-child{width:2.6rem;background:#e27878;border-left:solid 8px #e27878;border-top-left-radius:14px;border-bottom-left-radius:14px}ul.pagination li:last-child{width:2.6rem;background:#e27878;border-right:solid 8px #e27878;border-top-right-radius:14px;border-bottom-right-radius:14px}ul.pagination *{font-size:1.2rem}}

