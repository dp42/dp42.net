ation *{margin:0 auto;color:#161821;font-size:2rem}.articles{display:flex;flex-wrap:wrap;flex:1;justify-content:center;align-content:center;margin:12px auto}.articles article{position:relative;overflow:hidden;max-width:80%;margin:2em auto 0;color:#c6c8d1}.articles article .entry-summary{position:relative;z-index:100;overflow:hidden;margin-top:12px;padding:0 12px;max-height:10em;max-width:40em;background:#161821}.articles article:hover .entry-summary{color:#84a0c6}.single-entry{margin:0 24px}.single-entry .entry-content{margin:12px 0;padding:24px 3em;border-radius:10px}.single-entry .entry-content h2,.single-entry .entry-content h3,.single-entry .entry-content h4,.single-entry .entry-content h5,.single-entry .entry-content h6{color:#e2a478}.single-entry .entry-content img{display:block;max-width:90%;margin:12px auto}.single-entry .entry-content pre{display:block;width:90%;margin:12px auto;padding:8px;border:solid 2px #c6c8d1;font-size:1.4rem}.entry-header{text-align:center;border-left:solid 24px #e2a478;border-right:solid 24px #e2a478;border-radius:10px}.entry-header .entry-title{margin-bottom:0;border-left:solid 4px #161821;border-right:solid 4px #161821;background:#84a0c6;color:#161821;font-size:2.4rem}.entry-header .publish-date{display:block;border-left:solid 4px #161821;border-right:solid 4px #161821;text-align:center;text-transform:uppercase;background:#84a0c6;color:#161821;font-size:0.6em}@media screen and (min-width: 960px){.wrapper{font-size:2.4rem}header h1{font-size:3.6rem}}@media screen and (max-width: 640px){.wrapper{font-size:1.6rem}header h1,.wrapper .not-found span{font-size:2.4rem}ul.pagination li{height:2rem;width:2rem}ul.pagination li:first-child{width:2.6rem;background:#e27878;border-left:solid 8px #e27878;border-top-left-radius:14px;border-bottom-left-radius:14px}ul.pagination li:last-child{width:2.6rem;background:#e27878;border-right:solid 8px #e27878;border-top-right-radius:14px;border-bottom-right-radius:14px}ul.pagination *{font-size:1.2rem}.